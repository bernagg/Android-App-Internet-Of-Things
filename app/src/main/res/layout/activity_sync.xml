<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="2"
    android:rowCount="3">


    <ImageView
        android:id="@+id/iv_helmet"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="0"
        android:layout_column="0"
        app:srcCompat="@mipmap/ic_firefighter"
        />
    <ImageView
        android:id="@+id/iv_jacket"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="0"
        android:layout_column="1"
        app:srcCompat="@mipmap/ic_jacket" />
    <ImageView
        android:id="@+id/iv_hose"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="0"
        app:srcCompat="@mipmap/ic_hose" />
    <ImageView
        android:id="@+id/iv_pants"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="1"
        app:srcCompat="@mipmap/ic_pants" />


    <Button
        android:id="@+id/btn_run_synctask"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"

        android:text="Run Async task!" />

    <Button
        android:id="@+id/btn_stop_synctask"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"

        android:text="Stop Async task!" />
</GridLayout>